<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GumiLifeProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LayoutTitleTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
    </style>

    <style name="BottomSheetTitleTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
    </style>

    <style name="CrossWorkTimeTextStyle">
        <item name="android:textColor">#5B62FF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
    </style>

    <style name="HomeMiddleTitleTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
    </style>

    <style name="HomeMiddleContentTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
    </style>


    <style name="HomeWeatherTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
    </style>

    <!-- Splash -->
    <style name="SplashSloganTextStyle">
        <item name="android:textColor">@color/splash_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
    </style>
    <style name="SplashTitleTextStyle">
        <item name="android:textColor">#5B62FF</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
    </style>

</resources>