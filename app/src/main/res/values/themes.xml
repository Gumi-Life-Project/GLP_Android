<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GumiLifeProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="LayoutTitleTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
    </style>

    <style name="BottomSheetTitleTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
    </style>

    <style name="CrossWalkTimeTextStyle">
        <item name="android:textColor">#5B62FF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
    </style>

    <style name="HomeMiddleTitleTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
    </style>

    <style name="HomeMiddleContentTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
    </style>

    <style name="HomeMiddleContentGrayTextStyle">
        <item name="android:textColor">#272727</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
    </style>

    <style name="HomeMiddleContentLightGrayTextStyle">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HomeWeatherTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
    </style>

    <!-- Splash -->
    <style name="SplashSloganTextStyle">
        <item name="android:textColor">@color/splash_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
    </style>
    <style name="SplashTitleTextStyle">
        <item name="android:textColor">#5B62FF</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
    </style>

    <!-- Shuttle Bus -->
    <style name="ShuttleBusGuidanceTextStyle">
        <item name="android:textColor">#242424</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
    </style>

    <style name="ShuttleBusLineTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_black</item>
    </style>

    <style name="ShuttleBusStopTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
    </style>

    <!-- Home -->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_top_corners</item>
    </style>

    <!-- Tool bar -->
    <style name="ToolBarTitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_black</item>
    </style>

    <style name="HomeToolBarSubTitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_light</item>
    </style>

    <style name="HomeToolBarTitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_black</item>
    </style>
</resources>